<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1531263539449-56fdf29dfc4d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="search-form-wrapper col-4 col-md-4 offset-md-1 col-xl-4 offset-xl-1">
    <h1>Connecting <strong>Leftovers </strong>and <strong>people</strong>!</h1>
    <p>Food that otherwise would go to waste, turns into a meal</p>
    <%= render 'shared/search-form' %>
  </div>
</div>



<div class="d-flex card-wrap" style= "justify-content: space-evenly;" >
  <% @foods.sample(4).each do |food| %>
  <div class="card-trip">
    <img src="https://source.unsplash.com/1600x900/?<%=food.name %>"/>
    <div class="card-trip-infos">
      <div>
        <h2><%= food.name  %></h2>
        <p class="card-text">Freshness:
        <%= render partial: 'shared/food_emoji', locals: {food: food}%></p>
        <p class="card-text index-card-price"><strong><i class="fas fa-dollar-sign"></i>  </strong><%= food.price %></p>
      </div>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>

  <% end %>

