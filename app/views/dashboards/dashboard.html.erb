<p id="notice"><%= notice %></p>
<div class="dashboard-head row justify-content-between m-5" >
<h1>Dashboard</h1>
<%= link_to "Couldn't finish something?", new_food_path %>
</div>

<div class="container">
<h2>What you've shared</h2>
<div class="row justify-content-md-center mb-5">
    <% @foods.each do |food| %>
    <div class="col-md-4 col-sm-12">
        <div class="dashboard-card">
      <div class="card">
          <img class="card-img-top card-img" src="https://source.unsplash.com/random" alt="food-image">
          <div class="dashboard-card-content">
      <h5 class="card-title"><%= food.name %></h5>
      <p class="card-text"><%= food.description %></p>
      <p class="card-text"><%= food.freshness %></p>
      <p class="card-text"><%= food.price %></p>
      <p> <%= link_to 'Show', food %></p>
      </div>
  </div>
  </div>
</div>
    <% end %>
</div>

<h2>What you've warmed up</h2>
<div class="row justify-content-md-center">
    <% @orders.each do |order| %>
    <div class="col-md-4 col-sm-12">
    <div class="dashboard-card">
  <div class="card">
  <img class="card-img-top card-img" src="https://source.unsplash.com/random" alt="food-image">
  <div class="dashboard-card-content">
      <h5 class="card-title"><%= order.name %></h5>
      <p class="card-text"><%= order.description %></p>
      <p class="card-text"><%= order.freshness %></p>
      <p class="card-text"><%= order.price %></p>
      <p> <%= link_to 'Show', order %></p>
    </div>
  </div>
</div>
</div>
    <% end %>
</div>


