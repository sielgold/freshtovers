<div class="container index-container">
  <div class="row">
    <% @foods.each do |food| %>
      <% if food.order.empty? %>
        <div class="col-md-4 col-sm-12">
          <div class="card mb-3 index-card">
            <% if food.photo.url.nil? %>
              <img src="https://source.unsplash.com/1600x900/?<%= food.name %>" class="card-img-top" alt="food-image">
            <% else %>
              <%= cl_image_tag food.photo %>
            <% end %>
            <div class="card-body">
              <% if policy(food).edit? %>
                <%= link_to edit_food_path(food), class: "show-icons" do %>
                  <i class="far fa-edit"></i>
                <% end %>
                <%= link_to food_path(food), method: :delete, class: "show-icons" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              <% end %>
              <h5 class="card-title"><%= food.name %></h5>
              <p class="card-text">Freshness:
          <%= render partial: 'shared/food_emoji', locals: {food: food}%></p>
              <p class="card-text index-card-price"><strong><i class="fas fa-dollar-sign"></i>  </strong><%= food.price %></p>
              <%= link_to "Yum!", food_path(food), class: "btn btn-success"%>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

